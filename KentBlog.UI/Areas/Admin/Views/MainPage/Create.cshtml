@model KentBlog.Entity.Concrete.OpeningPage

@{
    ViewData["Title"] = "Editör İçerik Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SectionKey" value="editor" />

    <div class="row mt-4">
        <div class="col-8">
            <div class="card mb-4">

                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Editör İçerik Ekle</h5>
                </div>

                <div class="card-body">

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Name">Hatırlatıcı İsim </label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <input type="text" class="form-control" asp-for="Name" value="Editör İçerik" required>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Description">İçerik</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <textarea class="form-control textarea-editor" asp-for="Description" id="EditorInfo"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="SectionColor">Arka Plan Rengi</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <input class="form-control" type="color" value="#ffffff" asp-for="SectionColor">
                            </div>
                        </div>
                    </div>



                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="card mb-4">

                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Anahtar Bilgiler</h5>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <div class="form-check form-switch mb-2">
                                    <label class="form-check-label" asp-for="Status">Durumu</label>
                                    <input class="form-check-input" asp-for="Status" type="checkbox" checked />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>



</form>