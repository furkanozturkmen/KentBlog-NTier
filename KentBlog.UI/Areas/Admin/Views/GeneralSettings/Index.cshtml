@model KentBlog.Entity.Concrete.GeneralSettings

@{
    ViewData["Title"] = "Genel Bilgiler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (TempData["SuccessMessage"] != null)
{

    <div id="successToast" class="bs-toast toast toast-placement-ex m-2 fade bg-success top-0 start-50 translate-middle-x show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
        <div class="toast-header">
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"> <i class="icon-base bx bx-bell me-2"></i> @TempData["SuccessMessage"]</div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorToast" class="bs-toast toast toast-placement-ex m-2 fade bg-danger top-0 start-50 translate-middle-x show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
        <div class="toast-header">
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"> <i class="icon-base bx bx-bell me-2"></i> @TempData["ErrorMessage"]</div>
    </div>
}


<form asp-action="Index" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="card mb-4 mt-4">

        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Genel Bilgiler</h5>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Firma Logo</label>
                <div class="col-sm-10">
                    <div class="col-sm-10">
                        <div class="logo-preview">
                            @if (Model != null && !string.IsNullOrEmpty(Model.Logo))
                            {
                                <img src="@Url.Content(Model.Logo)" alt="Logo" id="LogoPreview" class="mb-3" style="max-width: 200px; max-height: 100px;">
                            }
                        </div>
                    </div>

                    <input class="form-control" type="file" asp-for="LogoFile">


                    <div style="display: flex; justify-content:space-between;">
                        <small class="text-muted">Logo Boyutu 290x65 ölçülerinde olmalıdır.</small>
                        <small class="text-muted">Desteklenen dosya türleri: .jpg .jpeg .png .gif</small>
                    </div>


                </div>
            </div>



            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="BusinessName">Firma Adı <span style="color: red;">*</span></label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-building-house"></i></span>
                        <input type="text" class="form-control" asp-for="BusinessName" placeholder="Firma Ünvanı">
                    </div>
                    <span asp-validation-for="BusinessName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Mail">Mail</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                        <input type="email" class="form-control" asp-for="Mail">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Mail2">Mail (2)</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                        <input type="email" class="form-control" asp-for="Mail2">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Phone">Telefon</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-phone"></i></span>
                        <input type="text" class="form-control phone-mask" asp-for="Phone">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Phone2">Telefon (2)</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-phone"></i></span>
                        <input type="text" class="form-control phone-mask" asp-for="Phone2">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Fax">Fax</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-printer"></i></span>
                        <input type="text" class="form-control phone-mask" asp-for="Fax">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Fax2">Fax (2)</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-printer"></i></span>
                        <input type="text" class="form-control phone-mask" asp-for="Fax2">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Address">Adres</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-map"></i></span>
                        <textarea class="form-control" asp-for="Address"></textarea>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Address2">Adres (2)</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-map"></i></span>
                        <textarea class="form-control" asp-for="Address2"></textarea>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="GoogleMaps">Google Map</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-map-pin"></i></span>
                        <input type="text" class="form-control" asp-for="GoogleMaps">
                    </div>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>


        </div>
    </div>

    <div class="card mb-4">

        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Sosyal Medya Bilgileri</h5>
        </div>

        <div class="card-body">


            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Facebook"></label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-facebook"></i></span>
                        <input type="text" class="form-control" asp-for="Facebook">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Twitter"></label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-twitter"></i></span>
                        <input type="text" class="form-control" asp-for="Twitter">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Instagram"></label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-instagram"></i></span>
                        <input type="text" class="form-control" asp-for="Instagram">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="WhatsApp"></label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-whatsapp"></i></span>
                        <input type="text" class="form-control" asp-for="WhatsApp">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="YouTube">YouTube</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-youtube"></i></span>
                        <input type="text" class="form-control" asp-for="YouTube">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="LinkedIn">LinkedIn</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-linkedin"></i></span>
                        <input type="text" class="form-control" asp-for="LinkedIn">
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Pinterest">Pinterest</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxl-pinterest"></i></span>
                        <input type="text" class="form-control" asp-for="Pinterest">
                    </div>
                </div>
            </div>



            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>


        </div>

    </div>


    <div class="card mb-4">

        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Kurumsal Bilgi</h5>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="AboutUs">Kurumsal Bilgi</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                        <textarea class="form-control textarea-editor" asp-for="AboutUs" id="AboutUs"></textarea>
                    </div>
                </div>
            </div>




            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>

        </div>
    </div>
</form>



<script>
    document.getElementById('LogoFile').addEventListener('change', function (e) {
        var file = e.target.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function (event) {
                var imgElement = document.getElementById('LogoPreview');

                // Eğer önceden bir logo varsa, sadece src'yi değiştir
                if (imgElement) {
                    imgElement.src = event.target.result;
                } else {
                    // Eğer daha önce bir logo yoksa yeni bir img elementi oluştur
                    imgElement = document.createElement('img');
                    imgElement.id = "LogoPreview";
                    imgElement.src = event.target.result;
                    imgElement.style.maxWidth = '200px';
                    imgElement.style.maxHeight = '100px';
                    imgElement.classList.add('mb-3');

                    document.querySelector('.logo-preview').appendChild(imgElement);
                }
            };
            reader.readAsDataURL(file);
        }
    });
</script>


<script>
    setTimeout(function () {
        const toastEl = document.getElementById('successToast');
        if (toastEl) {
            toastEl.classList.remove('show');
            toastEl.classList.add('hide');
        }
    }, 3000);

        setTimeout(function () {
        const toastEl = document.getElementById('errorToast');
        if (toastEl) {
            toastEl.classList.remove('show');
            toastEl.classList.add('hide');
        }
    }, 3000);

</script>