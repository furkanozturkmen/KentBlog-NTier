@model KentBlog.Entity.Concrete.Blog

@{
	ViewBag.Title = Html.Raw(Model.SeoTitle);
	ViewBag.Description = Html.Raw(Model.MetaDescription);
	ViewBag.Keywords = Html.Raw(Model.MetaKeyword);

	Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="postcontent">
	<div class="container">


		<div class="single-post mb-0">


			<div class="entry">


				<div class="entry-title">
					<h2>@Model.Title</h2>
				</div>

				<div class="entry-meta">
					<ul>
						<li><i class="uil uil-schedule"></i> @Model.Date </li>
					</ul>
				</div>

				<div class="entry-image">
					<a href="#"><img src="@Url.Content(Model.Image)" alt="@Model.SeoTitle"></a>
				</div>

				<div class="entry-content mt-0">

					@Html.Raw(Model.Content)


				</div>
			</div>




		</div>
	</div>
</main>