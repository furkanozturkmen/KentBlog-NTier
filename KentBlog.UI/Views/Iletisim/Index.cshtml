@model KentBlog.UI.ViewModels.ContactViewModel

@{
    ViewBag.Title = Html.Raw(Model.Menu.SeoTitle);
    ViewBag.Description = Html.Raw(Model.Menu.MetaDescription);
    ViewBag.Keywords = Html.Raw(Model.Menu.MetaKeyword);

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .content-wrap {
        padding: 0;
    }
</style>


<section class="gmap slider-parallax" style="height: 30vh;">
    <iframe src="@Model.GeneralSettings?.GoogleMaps" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>



<div class="container" style="padding: 60px 0;">

    <div class="row align-items-stretch col-mb-50 mb-0">

        <div class="col-lg-8" style="border-right: 1px solid #666; padding: 0 40px;">

            <div>
                <h3> <strong>İletişim Formu</strong> </h3>
            </div>

            <div class="form-widget">

                <div class="form-result"></div>

                <form class="mb-0" id="template-contactform" name="template-contactform" action="#" method="post" novalidate="novalidate">

                    <div class="form-process">
                        <div class="css3-spinner">
                            <div class="css3-spinner-scaler"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="template-contactform-name">Ad Soyad <small>*</small></label>
                            <input type="text" id="template-contactform-name" name="template-contactform-name" value="" class="form-control required">
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="template-contactform-email">E-Mail <small>*</small></label>
                            <input type="email" id="template-contactform-email" name="template-contactform-email" value="" class="required email form-control">
                        </div>

                        <div class="w-100"></div>

                        <div class="col-md-12 form-group">
                            <label for="template-contactform-phone">Telefon</label>
                            <input type="text" id="template-contactform-phone" name="template-contactform-phone" value="" class="form-control">
                        </div>

                        <div class="w-100"></div>

                        <div class="col-md-12 form-group">
                            <label for="template-contactform-subject">Konu <small>*</small></label>
                            <input type="text" id="template-contactform-subject" name="subject" value="" class="required form-control">
                        </div>

                        <div class="col-md-4 form-group">
                        </div>

                        <div class="w-100"></div>

                        <div class="col-12 form-group">
                            <label for="template-contactform-message">Mesaj <small>*</small></label>
                            <textarea class="required form-control" id="template-contactform-message" name="template-contactform-message" rows="6" cols="30"></textarea>
                        </div>

                        <div class="col-12 form-group">
                            <button name="submit" type="submit" id="submit-button" tabindex="5" value="Submit" class="button button-3d m-0">Gönder</button>
                        </div>
                    </div>

                    <input type="hidden" name="prefix" value="template-contactform-">

                </form>
            </div>

        </div>

        <div class="col-lg-4" style="padding: 0 40px;">
            <div class="row col-mb-50">
                <h5> @Model.GeneralSettings?.BusinessName </h5>
                <p> @Model.GeneralSettings?.Address </p>

                <div class="col-12">
                    <div class="feature-box fbox-center fbox-bg fbox-plain">
                        <div class="fbox-icon">
                            <a href="#"><i class="bi-telephone"></i></a>
                        </div>

                        <div class="fbox-content">
                            <h3>
                                Telefon

                                @if (!string.IsNullOrEmpty(Model.GeneralSettings?.Phone))
                                {
                                    <span class="subtitle"> @Model.GeneralSettings?.Phone </span>
                                }


                                @if (!string.IsNullOrEmpty(Model.GeneralSettings?.Phone2))
                                {
                                    <span class="subtitle"> @Model.GeneralSettings?.Phone2 </span>
                                }

                            </h3>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="feature-box fbox-center fbox-bg fbox-plain">
                        <div class="fbox-icon">
                            <i class="fa fa-envelope"></i>
                        </div>

                        <div class="fbox-content">
                            <h3>
                                Mail
                                @if (!string.IsNullOrEmpty(Model.GeneralSettings?.Mail))
                                {
                                    <span class="subtitle"> @Model.GeneralSettings?.Mail </span>
                                }

                                @if (!string.IsNullOrEmpty(Model.GeneralSettings?.Mail2))
                                {
                                    <span class="subtitle"> @Model.GeneralSettings?.Mail2 </span>
                                }

                            </h3>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

</div>
