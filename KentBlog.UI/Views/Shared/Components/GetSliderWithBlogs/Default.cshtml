				<a class="tp-caption font-primary tp-resizeme"
				   href="@Url.Action("Index", "Haber", new { id = item.Id, seo = Helpers.UrlDostuYap(item.SeoTitle) })" target="_self" id="@($"slide-{item.Id}")-layer-5" data-x="['left','left','left','left']" data-hoffset="['40','40','30','20']" data-y="['bottom','bottom','bottom','bottom']" data-voffset="['75','70','80','68']" data-fontsize="['40','35','25','25']" data-lineheight="['40','35','25','24']" data-width="['580','480','340','260']" data-height="none" data-whitespace="normal" data-type="text" data-actions='' data-basealign="slide" data-responsive_offset="on" data-frames='[{"from":"y:20px;opacity:0;","speed":2000,"to":"o:1;","delay":200,"ease":"Power4.easeOut"},{"delay":"wait","speed":300,"to":"opacity:0;","ease":"nothing"}]' data-textAlign="['left','left','left','left']" data-paddingtop="[0,0,0,0]" data-paddingright="[0,0,0,0]" data-paddingbottom="[0,0,0,0]" data-paddingleft="[0,0,0,0]" style="z-index: 6; min-width: 580px; max-width: 580px; white-space: normal; font-size: 35px; line-height: 35px; font-weight: 600; color: rgba(255,255,255,1);text-decoration: none; margin-top: 50px;">@item.Title</a>


				<div class="tp-caption tp-resizeme" id="@($"slide-{item.Id}")-layer-6" data-x="['left','left','left','left']" data-hoffset="['40','40','30','20']" data-y="['bottom','bottom','bottom','bottom']" data-voffset="['28','28','20','20']" data-fontsize="14" data-type="text" data-actions='' data-basealign="slide" data-responsive_offset="on" data-frames='[{"from":"y:20px;opacity:0;","speed":2000,"to":"o:1;","delay":600,"ease":"Power4.easeOut"},{"delay":"wait","speed":300,"to":"opacity:0;","ease":"nothing"}]' data-textAlign="['left','left','left','left']" style="min-width: 306px; max-width: 306px;z-index: 6; text-shadow: none; color: #DDD !important; font-size: 20px; line-height: 20px; font-weight: 600; font-family: 'Roboto', sans-serif;"><i class="bi-clock" style="position: relative; top: 1px;"></i> @item.Date.Value.ToShortDateString() <span style="background: #0c5c81; padding: 5px 15px; border-radius: 10px; margin: 0 10px;"> @item.Category.CategoryName </span> </div>

			</li>
			<!-- SLIDE  -->
		}
	}


</ul>